#content
  %h2.page-title
    Tu cuenta

  .content
    = form_for(resource, :as => resource_name, :url => session_path(resource_name)) do |f|
      %legend Acceso Clientes
      .aviso Después de contratar tu sesión de fotos, podrás descargarlas desde aquí
      .field
        = f.label :email
        = f.email_field :email
      .field
        = f.label :password
        = f.password_field :password
      - if devise_mapping.rememberable?
        .field.remember-me
          = f.check_box :remember_me
          = f.label :remember_me
      .actions= f.submit "Sign in"
      = render :partial => "clientes/shared/links"
