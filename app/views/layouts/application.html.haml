%html.no-js
  / <![endif]
  %head
    %title test
    == <meta http-equiv="Content-Type" content="text/html;charset=utf-8">
    = stylesheet_link_tag '/stylesheets/screen.css', '/javascripts/libs/supersized/slideshow/css/supersized.css'

    = render 'layouts/metas'
    = render 'layouts/head'
    = javascript_include_tag :defaults 

  %body{:id => bodyid, :class => bodyclass}

    - if notice
      = javascript_tag do
        var alerta_mensaje =  "#{notice}"

    .container
      %header.main.one-third.column.alpha{:role => 'banner'}
        .inner
          %h1#logo
            %a{:href => '/'}
              Renato Ghilardi
              %b
                Fotografía Profesional 
          #menu-button
            Menú
          %nav#main-menu.row
            = render 'layouts/menu'
          = render 'shared/follow_social'
          #contact-info
            %p
              = link_to 'Contactar', new_contacto_path, :id => 'contact-us'
              %span.phone
                9986521463
              %span.email
                renato@ghilardi.com
      
          = render :partial => "contactos/form", :locals => {:contacto => Contacto.new}
      %section.two-thirds.column.alpha{:role => 'main'}
        .inner
          = yield

    = render 'layouts/footer_scripts'

    = javascript_include_tag '/javascripts/rails.validations.js'
    = #render 'shared/google_analytics'
