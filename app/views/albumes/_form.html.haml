= form_for @album do |f|
  -if @album.errors.any?
    #error_explanation
      %h2= "#{pluralize(@album.errors.count, "error")} prohibited this album from being saved:"
      %ul
        - @album.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :nombre
    = f.text_field :nombre
  .field
    = f.label :fecha
    = f.date_select :fecha
  .field
    = f.label :cliente_id
    = f.text_field :cliente_id
  .actions
    = f.submit 'Save'
