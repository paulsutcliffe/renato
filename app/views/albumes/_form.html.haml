= form_for @album do |f|
  -if @album.errors.any?
    #error_explanation
      %h2= "#{pluralize(@album.errors.count, "error")} prohibited this album from being saved:"
      %ul
        - @album.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :nombre
    = f.text_field :nombre, :placeholder => I18n.t('album.placeholder.nombre')
  .field.date-select
    = f.label :fecha
    = f.date_select :fecha



  .field
    = f.label :cliente_id 
    = f.collection_select :cliente_id, Cliente.all, :id, :nombre, {:include_blank => 'None'}
  .actions
    = f.submit I18n.t('save')
