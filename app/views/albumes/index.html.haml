#content
  %h2.page-title
    Retratos

  - if current_cliente
    %h3.user-title
      = current_cliente.nombre
  
  .admin-crud.admin-head
    = link_to 'New Album', new_album_path, :class => 'btn create'

  #carousel1.content.gallery
    %ul
      - @albumes.each do |album|
        %li
          - unless album.fotos.empty?
            = link_to image_tag(album.fotos.first.foto_picture(:index)), album, :title => fotos_size(album.fotos) + ultima_foto(album.fotos)
          = link_to album.nombre, album, :class => 'caption'
          .admin-crud.admin-iterate
            = link_to 'Edit', edit_album_path(album)
            = link_to 'Destroy', album, :confirm => 'Are you sure?', :method => :delete

  = will_paginate @albumes





