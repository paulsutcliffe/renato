= form_for @foto do |f|
  -if @foto.errors.any?
    #error_explanation
      %h2= "#{pluralize(@foto.errors.count, "error")} prohibited this foto from being saved:"
      %ul
        - @foto.errors.full_messages.each do |msg|
          %li= msg

  .field
    = f.label :titulo
    = f.text_field :titulo
  .field
    = f.label :publico
    = f.check_box :publico
  .field
    = f.label :album_id
    = f.text_field :album_id
  .field
    = f.label :categoria_id
    = f.text_field :categoria_id
  .actions
    = f.submit 'Save'
